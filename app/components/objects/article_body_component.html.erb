<%= link_to panel_object_path(object), class: 'flex flex-col items-center bg-white border border-gray-200 rounded-lg shadow md:flex-row hover:bg-gray-100 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700' do %>
  <div class="flex flex-col justify-between p-4">
    <span class="uppercase text-xs text-gray-400">Article</span>
    <h1 class="text-xl text-gray-700 mb-2 font-bold"><%= object.name %></h1>
    <p class="text-gray-500"><%= object_decorated.excerpt.truncate(150) %></p>
  </div>
  <img class="ml-auto object-cover w-full rounded-t-lg h-96 md:h-auto md:w-48 md:rounded-none md:rounded-s-lg" src="<%= object_decorated.thumbnail_url %>"/>
<% end %>
